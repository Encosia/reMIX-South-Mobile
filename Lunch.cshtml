  <p><a href="http://maps.google.com/maps?q=4400+Ashford+Dunwoody+Road&ll=33.923242,-84.342513&spn=0.014618,0.01929&gl=us&t=h&z=16" rel="external">246 Perimeter Center Parkway NE<br />Atlanta, Ga 30346</a></p>
  }
}

